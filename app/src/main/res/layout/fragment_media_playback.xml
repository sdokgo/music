<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MediaPlaybackFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/seekbar"
            android:layout_below="@id/header"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/img_song"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/music" />

            <ImageView
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dimen_30dp"
                android:src="@drawable/ic_repeat_white" />

            <ImageView
                android:id="@+id/shuffle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_margin="30dp"
                android:src="@drawable/ic_shuffle_white" />
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="@dimen/dimen_10dp">

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/music" />

            <ImageView
                android:id="@+id/playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_toLeftOf="@id/more"
                android:src="@drawable/ic_queue_music" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_threedot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toLeftOf="@id/playlist"
                android:layout_toRightOf="@id/img_header"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:id="@+id/tenbaihat_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="aaaaaaaaaaaaaaa"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tencasi_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="aaaaaaaaaaaaaaa"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <SeekBar
            android:progressTint="@color/colorOrange"
            android:progressBackgroundTint="#000000"
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/timeOfSeekbar"
            android:thumbTint="@color/colorOrange" />

        <RelativeLayout
            android:layout_marginBottom="-8dp"
            android:id="@+id/timeOfSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/control_song">

            <TextView
                android:id="@+id/runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="00:00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:text="00:00"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/control_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@id/prev"
                    android:layout_weight="1"
                    android:src="@drawable/ic_like" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:id="@+id/prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@id/pause"
                    android:layout_weight="1"
                    android:src="@drawable/ic_previous" />

                <ImageView
                    android:id="@+id/pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pause_circle" />


                <ImageView
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/pause"
                    android:layout_weight="1"
                    android:src="@drawable/ic_next" />

                <ImageView
                    android:id="@+id/dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_toRightOf="@id/next"
                    android:layout_weight="1"
                    android:src="@drawable/ic_dislike" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
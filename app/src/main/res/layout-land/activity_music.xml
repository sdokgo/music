<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context=".activity.ActivityMusic"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange">

            <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                app:titleTextAppearance="@style/Medium"/>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_below="@id/appbarlayout"
            android:layout_above="@id/layoutPlayBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/framesong"
                android:layout_width="350dp"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:id="@+id/framesongplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/layoutPlayBar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_playbar"
                android:layout_width="50dp"
                android:layout_height="64dp"
                android:scaleType="fitXY"
                android:src="@drawable/music" />

            <ImageView
                android:id="@+id/playBar_Pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_pause" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_toLeftOf="@id/playBar_Pause"
                android:layout_toRightOf="@id/img_playbar">

                <TextView
                    android:id="@+id/tenbaihat_playbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Ten Bai hat"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_18sp" />

                <TextView
                    android:id="@+id/tencasi_playbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tenbaihat_playbar"
                    android:singleLine="true"
                    android:text="ten ca si"
                    android:textSize="@dimen/dimen_14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>


